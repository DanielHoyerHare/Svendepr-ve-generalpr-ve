<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calorie_Tracker.Pages.FoedevareAdd"
             >
    
    <StackLayout Padding="20">

        <Label Text="Add Food" FontSize="24" HorizontalOptions="Center" />

        
        <Entry Placeholder="Name" Text="{Binding Food.Name}" />
        <Entry Placeholder="Calories" Text="{Binding Food.Calories}" Keyboard="Numeric" />
        <Entry Placeholder="Carbohydrates" Text="{Binding Food.Carbohydrates}" Keyboard="Numeric" />
        <Entry Placeholder="Protein" Text="{Binding Food.Protein}" Keyboard="Numeric" />
        <Entry Placeholder="Fat" Text="{Binding Food.Fat}" Keyboard="Numeric" />

        <Button Text="Save" Command="{Binding SaveCommand}" HorizontalOptions="CenterAndExpand" />

    </StackLayout>
</ContentPage>