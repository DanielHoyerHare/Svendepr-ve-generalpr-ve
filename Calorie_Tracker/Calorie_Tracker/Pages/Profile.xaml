<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calorie_Tracker.Pages.Profile"
             Title="Profile">
    <StackLayout>
        <Label Text="Set Calorie Goals" FontSize="24" HorizontalOptions="Center" />

        <Entry Placeholder="Calorie Goal" Text="{Binding calorieGoal, Mode=TwoWay}" Keyboard="Numeric" />
        <Entry Placeholder="Carbohydrates Goal" Text="{Binding carboHydratesGoal, Mode=TwoWay}" Keyboard="Numeric" />
        <Entry Placeholder="Protein Goal" Text="{Binding proteinGoal, Mode=TwoWay}" Keyboard="Numeric" />
        <Entry Placeholder="Fat Goal" Text="{Binding fatGoal, Mode=TwoWay}" Keyboard="Numeric" />
        <Entry Placeholder="User ID" Text="{Binding userId, Mode=TwoWay}" />

        <Button Text="Save" Command="{Binding SaveCommand}" />
    </StackLayout>
</ContentPage>